import tkinter as tk
import random
import time
import threading

# Setup main window
root = tk.Tk()
root.title("Rock-Paper-Scissors ğŸ®")
root.geometry("520x670")
root.config(bg="#ffeaa7")

CHOICES = ["rock", "paper", "scissors"]

# Score Variables
user_score = 0
computer_score = 0

def countdown(user_choice):
    countdown_label.config(text="Rock...")
    root.update()
    time.sleep(0.7)
    countdown_label.config(text="Paper...")
    root.update()
    time.sleep(0.7)
    countdown_label.config(text="Scissors...")
    root.update()
    time.sleep(0.7)
    countdown_label.config(text="Shoot!")
    root.update()
    time.sleep(0.5)
    play_game(user_choice)

def get_computer_choice():
    return random.choice(CHOICES)

def determine_winner(user, computer):
    if user == computer:
        return "Tie"
    elif (user == "rock" and computer == "scissors") or \
         (user == "scissors" and computer == "paper") or \
         (user == "paper" and computer == "rock"):
        return "You Win!"
    else:
        return "Computer Wins!"

def play_game(user_choice):
    global user_score, computer_score
    computer_choice = get_computer_choice()
    result = determine_winner(user_choice, computer_choice)

    user_label.config(text=f"You: {user_choice.capitalize()}")
    computer_label.config(text=f"Computer: {computer_choice.capitalize()}")
    result_label.config(text=f"Result: {result}")

    if result == "You Win!":
        user_score += 1
    elif result == "Computer Wins!":
        computer_score += 1

    score_label.config(text=f"ğŸ† You: {user_score} | ğŸ’» Computer: {computer_score}")

def play(user_choice):
    threading.Thread(target=countdown, args=(user_choice,), daemon=True).start()

def reset_game():
    global user_score, computer_score
    user_score = 0
    computer_score = 0
    user_label.config(text="You: ")
    computer_label.config(text="Computer: ")
    result_label.config(text="Result: ")
    score_label.config(text="ğŸ† You: 0 | ğŸ’» Computer: 0")
    countdown_label.config(text="")

# Widgets
title_label = tk.Label(root, text="Rock-Paper-Scissors ğŸ®", font=("Comic Sans MS", 28, "bold"), bg="#ffeaa7", fg="#2d3436")
title_label.pack(pady=20)

choices_frame = tk.Frame(root, bg="#ffeaa7")
choices_frame.pack(pady=10)

user_label = tk.Label(choices_frame, text="You: ", font=("Comic Sans MS", 20, "bold"), bg="#ffeaa7", fg="#2d3436")
user_label.grid(row=0, column=0, padx=20)

vs_label = tk.Label(choices_frame, text="VS", font=("Comic Sans MS", 24, "bold"), bg="#ffeaa7", fg="#2d3436")
vs_label.grid(row=0, column=1, padx=10)

computer_label = tk.Label(choices_frame, text="Computer: ", font=("Comic Sans MS", 20, "bold"), bg="#ffeaa7", fg="#2d3436")
computer_label.grid(row=0, column=2, padx=20)

countdown_label = tk.Label(root, text="", font=("Comic Sans MS", 24, "bold"), bg="#ffeaa7", fg="#6c5ce7")
countdown_label.pack(pady=10)

result_label = tk.Label(root, text="Result: ", font=("Comic Sans MS", 24, "bold"), bg="#ffeaa7", fg="#2d3436")
result_label.pack(pady=10)

score_label = tk.Label(root, text="ğŸ† You: 0 | ğŸ’» Computer: 0", font=("Comic Sans MS", 22, "bold"), bg="#ffeaa7", fg="#2d3436")
score_label.pack(pady=10)

# Buttons Frame
button_frame = tk.Frame(root, bg="#ffeaa7")
button_frame.pack(pady=20)

# Common style for all buttons (Increased size)
btn_style = {
    "width": 10,     # Wider
    "height": 2,     # Taller
    "font": ("Comic Sans MS", 16, "bold"),
    "relief": "raised",
    "bd": 3,
    "compound": "center",
    "cursor": "hand2"
}

rock_button = tk.Button(button_frame, text="ğŸª¨\nRock", bg="#74b9ff", fg="white", command=lambda: play("rock"), **btn_style)
rock_button.grid(row=0, column=0, padx=10, pady=5)

paper_button = tk.Button(button_frame, text="ğŸ“„\nPaper", bg="#55efc4", fg="black", command=lambda: play("paper"), **btn_style)
paper_button.grid(row=0, column=1, padx=10, pady=5)

scissors_button = tk.Button(button_frame, text="âœ‚ï¸\nScissors", bg="#fd79a8", fg="white", command=lambda: play("scissors"), **btn_style)
scissors_button.grid(row=0, column=2, padx=10, pady=5)

reset_button = tk.Button(root, text="ğŸ”„ Reset Game", bg="#fab1a0", fg="black", font=("Comic Sans MS", 18, "bold"), width=20, height=2, command=reset_game, relief="ridge", bd=4, cursor="hand2")
reset_button.pack(pady=20)

root.mainloop()
